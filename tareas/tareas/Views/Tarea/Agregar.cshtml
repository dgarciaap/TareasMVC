@model  TasksMVC.Models.Tarea

@{
    ViewBag.Title = "Agregar tarea";
}

<h2>Agregar tarea</h2>

<div class="row">
    <div class="col s12 m12 l8">
        <form method="POST" action="/Tarea/Agregar"> <!--Enviar a controlador la tarea-->
            <div class="row">
                <div class="input-field col s12">
                    <input name="Titulo" type="text" class="validate"><!--Se manda propiedad Titulo-->
                    <label for="Titulo">Título</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input name="AsignadaA" type="text" class="validate"> <!--Se manda propiedad AsignadaA-->
                    <label for="AsignadaA">Asignada A</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input type="submit" class="btn" value="Agregar tarea" />
                </div>
            </div>

        </form>
    </div>
</div>